extends _layout.pug

block content
  .outer
    if page.posts.length > 0
      ul.list-group
        each post in page.posts.sort('date', -1).toArray()
          li.list-group-item.title
            if (theme.list.date)
              div.date= date(post.date, 'YYYY年M月D日')
            br
            a(href=config.root + post.path, target=theme.post.blank ? "_blank" : "_self")= post.title

  if (theme.paginator)
    div(class="paginator")
      -
        var options = {
          prev_text: '上一页',
          next_text: '下一页'
        }
      != paginator(options)

  if theme.footer.display
    div(class="footer")!= theme.footer.context
