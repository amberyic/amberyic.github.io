extends includes/layout.pug

block content
  .inner
    h3
      != page.category

    if page.posts && page.posts.length > 0
      ul.list-group
        each post in page.posts.sort('date', -1).toArray()
          li.list-group-item.title
            a(href=config.root + post.path, target=theme.post.blank ? "_blank" : "_self")= post.title
            if (theme.list.date)
              div.date= date(post.date, 'YYYY/M/D')

    h3 类目
    if site.categories && site.categories.length
      != list_categories()
